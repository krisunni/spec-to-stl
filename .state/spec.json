  "hardware": [
    { "item": "Neodymium magnets", "spec": "6mm dia x 2mm", "quantity": 48, "note": "24 in shell + 24 in panels (6 per side x 2)" },
    { "item": "M2.5 x 6mm screws", "spec": "Phillips pan head", "quantity": 4, "note": "Pi 5 mounting" },
    { "item": "Raspberry Pi 5", "spec": "Any RAM variant", "quantity": 1, "note": "85 x 56mm board" },
    { "item": "UGREEN M.2 SSD Enclosure", "spec": "USB-C, 125 x 41 x 14mm", "quantity": 1, "note": "NVMe or SATA" },
    { "item": "UGREEN USB-C Ethernet Adapter", "spec": "Gigabit, 62 x 25 x 15mm", "quantity": 1, "note": "USB-C to RJ45" },
    { "item": "USB-C power supply", "spec": "5V 5A (27W PD)", "quantity": 1, "note": "Official Pi 5 PSU recommended" },
    { "item": "USB 3.0 cable", "spec": "USB-A to USB-C, short", "quantity": 1, "note": "SSD to Pi 5" },
    { "item": "Ethernet cable", "spec": "Cat5e/Cat6, short", "quantity": 1, "note": "Adapter to router/switch" }
  ],
  "assembly": {
    "stack_order": [
      "SSD Clamp Mount (z=3mm) - snap SSD enclosure into rails",
      "Ethernet Clamp Mount (z=35mm) - snap adapter into cradle",
      "Pi 5 Mount (z=65mm) - secure with 4x M2.5 screws",
      "Route cables: USB-C power, USB 3.0 to SSD, Ethernet",
      "Attach panels: front, rear, left, right (magnets self-align)"
    ],
    "notes": [
      "Insert magnets before assembly - observe polarity (opposite poles in shell vs panel)",
      "Shell prints opening-up, no supports needed",
      "Panels print flat with pattern facing up",
      "Test-fit panels before gluing magnets - adjust tolerance if needed",
      "Cable routing: power enters bottom-left, SSD cable exits right side"
    ]
  }
}
